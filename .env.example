# ======================================
# TOMA BEAUTY HUB - ENVIRONMENT VARIABLES
# ======================================
# Copy this file to .env and fill in your Supabase values

# ===== SUPABASE DATABASE =====
# Get DATABASE_URL from: https://app.supabase.com → Project Settings → Database
# Format: postgresql://[USER]:[PASSWORD]@[HOST]:[PORT]/postgres
# 
# Note: Supabase provides the full connection string on the Database page
# Copy the "Session mode" or "Transaction mode" connection string
DATABASE_URL=postgresql://postgres.[PROJECT_ID]:your_password@db.[PROJECT_ID].supabase.co:5432/postgres

# ===== SERVER =====
PORT=5000
NODE_ENV=development

# ===== SESSION =====
# Generate a random session secret (min 32 characters)
SESSION_SECRET=your_random_session_secret_here_change_this_in_production_minimum_32_chars

# ===== ADMIN CREDENTIALS =====
# For testing - the admin user to authenticate with
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password123

# ===== SUPABASE CLIENT (FRONTEND) =====
# Get these from: https://app.supabase.com → Project Settings → API
# These keys are PUBLIC and safe to expose in frontend code
# 
# VITE_SUPABASE_URL: Your Supabase project URL
# VITE_SUPABASE_PUBLISHABLE_KEY: Your Supabase anon/public API key
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your_anon_key_here_starts_with_eyJ

# ===== FRONTEND =====
# API Base URL for frontend to reach backend
VITE_API_URL=http://localhost:5000

# ===== OPTIONAL =====
# Logging level (development, info, warn, error)
LOG_LEVEL=info

# Enable debug mode
DEBUG=false
